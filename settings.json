{
    // ==============================================================================
    //                                    CUSTOM
    // ==============================================================================
    // Themes
    "workbench.colorTheme": "PyCharm Night Theme",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "fluent-icons",
    "material-icon-theme.folders.color": "#c09553",
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.hidesExplorerArrows": true,
    // Change font
    "editor.fontFamily": "Jetbrains Mono",
    "scm.inputFontFamily": "Jetbrains Mono",
    "terminal.integrated.fontFamily": "JetbrainsMonoNL Nerd Font",
    "chat.editor.fontFamily": "Jetbrains Mono",
    "debug.console.fontFamily": "Jetbrains Mono",
    "editor.codeLensFontFamily": "Jetbrains Mono",
    "notebook.output.fontFamily": "Jetbrains Mono",
    "markdown.preview.fontFamily": "Jetbrains Mono",
    "editor.inlayHints.fontFamily": "Jetbrains Mono",
    // Font size
    "editor.fontSize": 14, //14 is default
    // UI Changes
    "workbench.layoutControl.enabled": false,
    "window.titleBarStyle": "native",
    "editor.scrollbar.horizontalScrollbarSize": 2.5,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.fontLigatures": true,


    // =============================
    // ============ APC ============
    // =============================

    // Disable title bar
    "apc.electron": {
        "titleBarStyle": "hidden",
        "titleBarOverlay": {
            "color": "#1a1a1a",
            "height": 11, //10
            "symbolColor": "#f5f5f5",
        },
        "backgroundColor": "#00000000",
    },
    // Move activity bar to the bottom
    "apc.activityBar": {
        "position": "bottom",
        "hideSettings": true,
        "size": 22, //28
        "itemSize": 28
    },
    // Set non editor font
    "apc.font.family": "Jetbrains Mono",
    "apc.monospace.font.family": "Jetbrains Mono",
    // Status bar
    "apc.statusBar": {
        "position": "editor-bottom",
        "height": 22, //28
        "fontSize": 12
    },
    // Titlebar
    "apc.sidebar.titlebar": {
        "fontSize": 12,
        "height": 22,
    },
    "apc.stylesheet": {
        // ".editor-actions": "margin: auto 140px auto 0;background: #ffffff0f; height: 22px !important; border-radius: 4px; padding: 0 0 0 4px !important",

        // Color for selected tab
        "div.tab[aria-selected='true'] > .tab-border-top-container": "display: block !important; height: 1.5px; width: 100%; position: absolute; left: 0; background: linear-gradient(to right, #06f, #0af); box-shadow: 0 2px 10px #08f; z-index: 10",
        // "div.tab[aria-selected='true'] > .tab-border-top-container": "display: block !important; height: 1.5px; width: 100%; position: absolute; left: 0; background: #cc7832; box-shadow: 0 2px 10px #08f; z-index: 10",
        ".tabs-border-bottom::after": "background: transparent !important",

        ".inline-title-bar:not(.horizontal-activitybar) .monaco-workbench:not(.fullscreen) .activitybar:not(.right) .content": "height: 100% !important; transform: none !important",
        ".inline-title-bar:not(.horizontal-activitybar) .monaco-workbench div.activitybar.bordered.left .content": "border-right: 1px solid #0003 !important",
        ".monaco-workbench .activitybar > .content :not(.monaco-menu) > .monaco-action-bar .action-item.checked .active-item-indicator:before": "border: none !important; width: 2.5px; background: linear-gradient(to top, #06f, #0af); box-shadow: 5px 0 15px #08f",
        ".custom-activitybar:not(.horizontal-activitybar) div.monaco-workbench div.activitybar>div.content div.monaco-action-bar ul.actions-container li.action-item": "margin-top: 0 !important",
        
        // Rounded intellisense boxes
        ".monaco-editor .monaco-hover": "border-radius: 12px;",
        ".monaco-editor .parameter-hints-widget": "border-radius: 12px;",
        ".monaco-editor .suggest-details, .monaco-editor .suggest-widget": "border-radius: 12px;",
        ".monaco-editor .suggest-widget .monaco-list .monaco-list-row.focused": "border-radius: 12px;",

        //Rounded thinner scroll bars
        ".scrollbar.horizontal": "height:6px !important",
        ".vertical>.slider": "width:6px !important",
        ".slider": "border-radius:6px;",
        
        // Statusbar
        ".statusbar #status\\.host": "display: block; !important; height: 18px; margin: 2px; border-radius: 30px",    
            // Makes remote status bar item have transparent background
        // ".monaco-workbench .part.statusbar>.items-container>.statusbar-item.remote-kind": "background: transparent; color: #a7b0f3", 
        // ".monaco-workbench .part.statusbar>.items-container": "background: transparent; color: #a7b0f3", 
        // ".monaco-workbench .part.statusbar>.items-container>.statusbar-item.remote-kind": "background: #cc7832; color: #1a1a1a",  // orange
        // ".monaco-workbench .part.statusbar>.items-container>.statusbar-item.remote-kind": "background: #a7b0f3; color: #1a1a1a", // light purple/white
        ".monaco-workbench .part.statusbar>.items-container>.statusbar-item.remote-kind": "background: #9473a6; color: #1a1a1a",  // purple

        // Turn off inspector title
        // ".split-view-view>.sidebar> .title > .title-label" : " visibility: hidden !important;"
    },
    "apc.imports": [
        "file:///C:\\Users\\Alden\\OneDrive\\Documents\\vscode_config\\resize-quickinput-widget.js",
        "file:///C:\\Users\\Alden\\OneDrive\\Documents\\vscode_config\\filetree.css",
    ],


    // ===== Editor Settings =====
    // Minimap
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",

    // Cursor
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "block",
    
    // Custom colors
    "workbench.colorCustomizations": {
        // Remove Shadows
        "scrollbar.shadow": "#ffffff00",
        "widget.shadow": "#ffffff00",
        // Custom colors
        "[PyCharm Night Theme]": {
            // Change text color for items in inspector
            "sideBar.foreground": "#a9b7c6",
            "list.hoverForeground": "#a9b7c6",
            "activityBar.foreground": "#a9b7c6",
            "gitDecoration.ignoredResourceForeground": "#53585e",
            "list.errorForeground": "#f66",
            "list.warningForeground": "#a9b7c6",
            // "scrollbarSlider.background": "#00000000",
        }
    },
    
    // Scrolling
    "editor.stickyScroll.enabled": false,
    "workbench.tree.enableStickyScroll": false,
    "workbench.list.fastScrollSensitivity": 10,
    "editor.stickyScroll.scrollWithEditor": false,    

    "workbench.tree.renderIndentGuides": "none",
    "workbench.tree.indent": 20,
    "workbench.editor.wrapTabs": true,
    "breadcrumbs.enabled": false,
    "git.countBadge": "off",
    "explorer.compactFolders": false,

    // ==============================================================================
    //
    //
    //
    //
    // ==============================================================================
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        // "editor.formatOnType": true,
        // "editor.formatOnSave": true,
    },
    "[cpp]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
    },
    "[c]": {
        // "editor.formatOnType": true,
        // "editor.formatOnSave": true,
    },
    "[rust]": {
        // "editor.formatOnType": true,
        // "editor.formatOnSave": true,
    },
    "[json]": {
        // "editor.quickSuggestions": {
        //     "strings": true
        // },
        // "editor.suggest.insertMode": "replace",
        // "editor.formatOnSave": true,
    },
    "explorer.confirmDelete": false,
    "todohighlight.isEnable": true,
    "files.associations": {
        "*.py": "python",
        ".h": "C++",
        ".cpp": "C++",
        ".hpp": "C++",
        ".c": "C++",

        // For Daybreak
        "*.scene": "yaml",
        "*.subsprite": "yaml",
        "*.anim": "yaml",
        "*.controller": "yaml",
        "*.sprite": "yaml",
        "*.manager": "yaml",
        "*.registry": "yaml",
    },
    "explorer.confirmDragAndDrop": false,
    "security.workspace.trust.untrustedFiles": "open",
    "files.exclude": {
        "**/*.meta": true
    },
    "vsicons.dontShowNewVersionMessage": true,
    "C_Cpp.default.includePath": [
        "C:\\msys64\\mingw64\\include"
    ],
    "remote.SSH.remotePlatform": {
        "xenia.nevis.columbia.edu": "linux",
        "flx-srv-atlas": "linux",
        "felix.phy.bnl.gov": "linux"
    },
    "git.ignoreLegacyWarning": true,
    "git.enableSmartCommit": true,
    "workbench.startupEditor": "none",
    "update.mode": "default",
    "clangd.path": "c:\\Users\\Alden\\AppData\\Roaming\\Code\\User\\globalStorage\\llvm-vs-code-extensions.vscode-clangd\\install\\17.0.3\\clangd_17.0.3\\bin\\clangd.exe",
    "editor.renderWhitespace": "none",
    "diffEditor.ignoreTrimWhitespace": false,
    "clangd.arguments": [
        "--header-insertion=never"
    ],
    "terminal.integrated.defaultProfile.windows": "PowerShell",

    "window.commandCenter": false,
    "update.enableWindowsBackgroundUpdates": false,
   
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "editor.cursorSurroundingLines": 10,

    "C_Cpp.intelliSenseEngine": "disabled",

    "cmake.showOptionsMovedNotification": false,
    

    "highlightOnCopy.timeout": 75,
    "highlightOnCopy.backgroundColor": "rgba(230, 97, 89, 0.7)",
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "window.density.editorTabHeight": "compact",
    
